/* pages/column/column.wxss */
.container{
  margin: 0;
  padding: 0;
}
.list-tab{
  width: 100%;
  height: 85rpx;
  box-sizing: border-box;
}
.list-tab ul{
  display: flex;
  height: 72rpx;
  border: 1px solid #00C9FD;
  border-radius:12rpx;
}
.list-tab li{
  flex: 1;
  display: flex;
  font-size: 14px;
  justify-content: center;
  align-items: center;
  color: #008842;
}
.list-tab .active{
  background: #00C9FD;
  color: #fff;
}
.line{
  width: 100%;
  height: 30rpx;
  background-color:#E2F6FE;
}
/*list-box*/
swiper{
   height: 1000rpx; 
}
.scroll-box{
  display: flex;
  height: 1000rpx;
  flex-direction: column;
}
.content-img{
  height: 500rpx;
  width: 100%;
}
.content{
  width: 100%;
  height: 400rpx;
  display: flex;
  margin-top: 10rpx;
  flex-direction: column;
}
.content-first{
  width: 100%;
  position: relative;
}
.content-first image{
  width: 100%;
  height: 400rpx;
} 
.text {
  width: 96%;
  opacity: 0.9;
  margin: 0 20rpx;
  position: absolute;
  top: 310rpx;
  left: 0rpx;
  color: #fff;
  border-radius: 10rpx;
  padding: 20rpx 0;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  background-color: #313131;
}
.text text {
  padding-left: 20rpx;
}

