/* pages/main/main.wxss */

.container {
  margin: 0;
  padding: 0;
}

swiper {
  width: 100%;
  position: relative;
  height: 400rpx;
}

swiper image {
  width: 100%;
  height: 400rpx;
}

.text {
  width: 96%;
  opacity: 0.9;
  margin: 0 20rpx;
  position: absolute;
  top: 310rpx;
  left: 0rpx;
  color: #fff;
  border-radius: 10rpx;
  padding: 20rpx 0;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  background-color: #313131;
}
.text text {
  padding-left: 20rpx;
}
/**** swiper end ****/
.content{
  width: 100%;
  height: 400rpx;
  display: flex;
  margin-top: 10rpx;
  flex-direction: column;
}
.content-first{
  width: 100%;
  position: relative;
}
.content-first image{
  width: 100%;
  height: 400rpx;
} 
/******  *******/
 .box{
  border-radius: 22rpx;
  position: fixed;
  bottom: 425rpx;
  left: 175rpx;
  background: rgba(0, 0, 0, 0.7);
}
.box1{
  border-radius: 10rpx;
  background: #3A3B3C;
  width: 400rpx;
  height: 300rpx;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
}
.title{
  color: #FCAD26;
  margin: 0 auto;
  margin-top: 40rpx;
}
.contents{
  color: #fff;
  text-indent: 2em;
  margin-top: 10rpx;
}
.btns{
  width: 250rpx;
  margin: 80rpx auto;
}
.btns button{
  color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  background-color: #FCAD26;
}

