/* pages/main/expect/expect.wxss */
page {
  background: #f08080;
}
.expect {
  background: #f08080;
}
.box {
  width: 100%;
  height: 350rpx;
  border-radius: 50%;
  margin-top: -165rpx;
  background-color: #f5f5dc;
  position: relative;
}

.btn {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  position: absolute;
  top: 104rpx;
  left: 300rpx;
  background-color: #ffdab9;
}

.wen {
  text-align: center;
  line-height: 150rpx;
  margin-left: 46rpx;
  color: #f08080;
  font-size: 60rpx;
  font-weight: bold;
}

.amount {
  width: 100%;
  margin-top: 80rpx;
}

.poor {
  display: flex;
  flex-direction: column;
  margin-left: 280rpx;
  color: #fff;
  font-size: 30rpx;
  margin-bottom: 20rpx;
}

.money {
  margin-top: 60rpx;
  margin-left: 115rpx;
  margin-right: 120rpx;
  border-radius: 10rpx;
  font-size: 30rpx;
  color: #fff;
  box-shadow: 10rpx 10rpx 10rpx 10rpx #545454;
}

.money-btn {
  text-align: center;
  width: 100rpx;
  height: 50rpx;
  display: inline-block;
  border-radius: 10rpx;
  padding: 15rpx 10rpx;
  margin: 25rpx 24rpx;
  background-color:	#FA8072;
  box-shadow: 10rpx 10rpx 10rpx 10rpx #545454;
}
/*固定定位 start  */

.border {
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #fff;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  height: 70rpx;
  margin-left: 130rpx;
  margin-bottom: 10rpx;
  box-shadow: 5rpx 5rpx 5rpx 10rpx #aaa;
  display: flex;
  flex-direction: row;
}

.left, .right {
  display: flex;
  flex-direction: row;
  margin: 10rpx 0 10rpx 30rpx;
}

.left-img image {
  width: 45rpx;
  height: 45rpx;
  margin-right: 15rpx;
}

.right-img {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.right-img image {
  width: 45rpx;
  height: 45rpx;
}

.left-text, .right-text {
  font-size: 30rpx;
}

.left-text {
  color: #7c7c7c;
}

.left-line {
  margin-left: 40rpx;
  height: 60rpx;
  width: 1rpx;
  content: '';
  line-height: 60rpx;
  background-color: #eaeaeb;
}

.right-text[plain] {
  color: #e56b5c;
  height: 70rpx;
  line-height: 70rpx;
  text-align: left;
  border: 0;
  padding-left: 8rpx;
}

/*固定定位 end  */
