/* pages/navigation/index.wxss */

page {
  height: 100%;
}

.containers {
  height: 100%;
}

swiper {
  width: 100%;
  height: 360rpx;
}

swiper image {
  width: 100%;
  height: 360rpx;
}

/*****轮播图end ******/

.list-tab {
  height: 106rpx;
  box-sizing: border-box;
  padding: 5px 10px;
}

.list-tab ul {
  display: flex;
  height: 72rpx;
  border: 1px solid #00c9fd;
  border-radius: 12rpx;
}

.list-tab li {
  flex: 1;
  display: flex;
  font-size: 14px;
  justify-content: center;
  align-items: center;
  color: #008842;
}

.list-tab .active {
  background: #00c9fd;
  color: #fff;
}

.line {
  width: 100%;
  height: 30rpx;
  background-color: #e2f6fe;
}

/*list-box*/

.swiper-box {
  height: 100%;
}

.scroll-box {
  display: flex;
  height: 100%;
  flex-direction: column;
}

.box {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.program {
  margin-top: 20rpx;
  margin-left: 40rpx;
  display: flex;
  width: 100%;
  flex-direction: row;
}

.program_middle {
  display: flex;
  margin-left: 20rpx;
  flex-direction: column;
}

.program image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 20%;
}

.txt1 {
  margin-top: 40rpx;
  font-size: 34rpx;
}

.txt2 {
  color: #cccdce;
  font-size: 28rpx;
  width: 320rpx;
  margin-top: 10rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.program_right {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.lines {
  border: 1rpx solid #ecedef;
  width: 100%;
  margin-top: 25rpx;
}

.btn[plain] {
  color: #fff;
  background-color: #00c9fd;
  width: 110rpx;
  height: 70rpx;
  font-size: 28rpx;
  text-align: center;
  line-height: 70rpx;
  padding: 0 10rpx;
  border: 1px solid #adf0f1;
  border-left: none;
  border-radius: 0;
}

.btns {
  width: 100rpx;
  height: 62rpx;
  font-size: 28rpx;
  text-align: center;
  line-height: 62rpx;
  padding: 0 10rpx;
  border: 1px solid #adf0f1;
  border-left: none;
  border-radius: 0;
}
