/* pages/index/index.wxss */
page{
  background: #FFF841;
}
/*登录弹框 start */
.box{
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
  left: 0;
  top: 0;
}
.bounced{
  position: fixed;
  width: 500rpx;
  height: 400rpx;
  background: #FFF841;
  margin-top: 320rpx;
  border-radius: 15rpx;
}
.img{
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
}
.login{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 80rpx;
}
.login[plain]{
  border: none;
}
.txt{
  color: #fff;
}
/*登录弹框 end */

