/* pages/collection/collection.wxss */
page{
   /* background: #EEEFF1;  */
}
ad{
  margin-top: 20rpx;
}
.container{
  margin: 0;
  padding: 0;
}
.userInfo{
  width: 120rpx;
  height: 120rpx;
  margin-top: 20rpx;
  overflow: hidden;
  border: 1px solid #EFECF6;
  border-radius: 100%;
  z-index: 99999; 
}
.userName{
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #545454;
  z-index: 99999; 
}
.box{
  width: 90%;
  height: 120rpx;
  margin: 0 auto;
  margin-top: -110rpx;
  border-radius: 10rpx;
  z-index: 999;
  box-shadow: 10rpx 15rpx 20rpx 3rpx #EFECF6;
} 
/*暂无收藏 start */
.collect{
  margin-top: 30rpx;
  font-size: 30rpx;
}
/*暂无收藏 end */
.content{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.content-wrap{
  width: 100%;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #AAAAAA; 
}
.content-left{
  margin-top: 20rpx;
}
.content-left image{
  width: 380rpx;
  height: 220rpx;
  border-radius: 26rpx;
}
.content-right{
  margin-top: 20rpx;
  margin-left: 20rpx;
}
.right-top{
  font-weight: bold;
  margin-right: 18rpx;
  overflow : hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  width: 100%;
  font-size: 30rpx;
  text-overflow: ellipsis; /*文本缩进*/
}
.right-middle{
  color: #CECFD0;
  font-size: 28rpx;
  margin-top: 10rpx;
  letter-spacing: 2rpx;
  border-top: 1rpx solid #F0F0F0;
  margin-right: 30rpx;
}
.right-bottom{
  margin-top: 20rpx;
  display: flex;
  flex: 1;
  font-size: 28rpx;
  flex-direction: row;
}
.bottom-left{
  width: 120rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  border-radius: 10rpx;
  margin-left: 20rpx;
  margin-right: 40rpx;
  box-shadow: 3rpx 3rpx 3rpx 5rpx #545454;
}
.bottom-right[plain]{
  border: none;
  border-radius: 10rpx;
  color: #E21F26;
  height: 70rpx;
  font-size: 28rpx;
  line-height: 70rpx;
  margin-bottom: 4rpx;
  margin-left: 20rpx;
  box-shadow: 3rpx 3rpx 3rpx 5rpx #E21F26;
}
/* kf start */
.kf_button[plain]{
  /* background-color: #fff; */
  border: 0px;
  height: 100rpx;
  right: 0;
  top: 25rpx;
  position: fixed;
  margin-bottom: 20rpx;
}
.kf_button::after{
  border: 0px;
}
.kf_image{
  width: 100rpx;
  height: 120rpx;
  z-index: 9999;
  animation: mysecond 3s infinite;
}
@keyframes mysecond{
  0%{
    transform: translate(0rpx, 0rpx);
  }
  50%{
    transform:translate(-25rpx, 0rpx);
  }
  100%{
    transform: translate(25rpx, 0rpx);
  }
}
/* kf end */