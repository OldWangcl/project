/* pages/main/main.wxss */
swiper{
  width: 100%;
  height: 350rpx;
}
swiper image{
  height: 350rpx;
  width: 100%;
}
/******** 内容  ********/
.content{
  display: flex;
  flex-direction: column;
}
.content-first{
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 200rpx;
  justify-content: space-between;
  margin-top: 10rpx;
  border-bottom: 1px solid #AAAAAA;
}
.content-img{
  width: 400rpx;
  height: 200rpx;
  border-radius: 8rpx;
}
.content-text{
  color: #000;
  font-size: 28rpx;
  width: 320rpx;
  margin-top: 90rpx;
  overflow: hidden;
  white-space: nowrap;
  margin-bottom: 100rpx;
  text-overflow: ellipsis; /*文本缩进*/
}
.views , .time{
  margin-top: 40rpx;
  font-size: 26rpx;
  color: #ABABAB;
}
/*刷新按钮start  */
.refresh{
  position: fixed;
  bottom: 80rpx;
  right: 0;
  margin-right: 60rpx;
  margin-bottom: 40rpx;
}
.refresh-bgc{
  background-color: #fff;
  border-radius: 50%;
  width: 70rpx;
  height: 70rpx;
  opacity: 0.5;
}
.refresh-img{
  width: 70rpx;
  height: 70rpx;
}
/******  *******/
 .box{
  border-radius: 22rpx;
  position: fixed;
  bottom: 425rpx;
  left: 175rpx;
  background: rgba(0, 0, 0, 0.7);
}
.box1{
  border-radius: 10rpx;
  background: #3A3B3C;
  width: 400rpx;
  height: 300rpx;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
}
.title{
  color: #FCAD26;
  margin: 0 auto;
  margin-top: 40rpx;
}
.contents{
  color: #fff;
  text-indent: 2em;
  margin-top: 10rpx;
}
.btns{
  width: 250rpx;
  margin: 80rpx auto;
}
.btns button{
  color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  background-color: #FCAD26;
}
